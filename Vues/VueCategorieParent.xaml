<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AP4DantecMarket.Vues.VueCategorieParent"
              BackgroundColor="#2E2E30"
             Title="CatÃ©gories">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Titre de la page -->
            <Label Text="ðŸ“‚ Explorer les CatÃ©gories"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Gold"
                   Margin="0,10,0,20"/>

            <!-- Liste des catÃ©gories en colonne unique -->
            <CollectionView x:Name="CategoriesParentListView"
                            ItemsSource="{Binding CategoriesParent}"
                            SelectionMode="None">

                <CollectionView.ItemsLayout>
                    <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BackgroundColor="#3C3C3E"
                               BorderColor="Transparent"
                               Padding="0"
                               Margin="5"
                               HasShadow="True"
                               CornerRadius="16"
                               Opacity="0.95"
                               VerticalOptions="Start"
                               HeightRequest="80">
                            <!-- Limite la hauteur max -->

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer Tapped="OnCategoryTapped" CommandParameter="{Binding}" />
                            </Frame.GestureRecognizers>

                            <HorizontalStackLayout>

                                <!-- Barre dorÃ©e sur le cÃ´tÃ© gauche -->
                                <BoxView WidthRequest="8"
                                         BackgroundColor="Gold"
                                         CornerRadius="4"
                                         VerticalOptions="Fill"/>

                                <!-- Texte de la catÃ©gorie avec limitation -->
                                <Label Text="{Binding Nom}"
                                       FontSize="17"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"
                                       TextColor="White"
                                       Padding="9"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"/>
                                <!-- 2 lignes max -->
                            </HorizontalStackLayout>

                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
